<div class="p2">
  <div class="flex p1 justify-center border">
    <h1 class='bold'>Scorecard</h1>
    <div class="admission-index-score p1 score border flex flex-column">
      <h2 class='h2 bold m1 p0 flex justify-center'>Your Score</h2>
      <h3 class='h2 bold m1 p0 flex justify-center'><%= @admission_score.admission_index_score %></h3>
    </div>
  </div>
  <div class="flex flex-column border strong_schools">
    <div class="flex justify-center border">
      <h2 class='h1'>Strong Candidate for Admission</h2>
    </div>
    <div class="flex justify-around border">
      <div class="border col-2">
        <p><%= @admission_score.strong_schools.count %> schools</p>
        <%= link_to "View All", admission_score_schools_path(@admission_score, status: 'strong') %>
      </div>
      <% @admission_score.strong_schools[0..2].each do |school| %>
        <div class="border col-3">
          <p><%= school.name %></p>
          <p><%= school.min_admission_score %></p>
        </div>
      <% end %>
    </div>
  </div>
  <div class="flex flex-column border average_schools">
    <div class="flex justify-center border">
      <h2 class='h1'>Above Average Candidate for Admission</h2>
    </div>
    <div class="flex justify-around border">
      <div class="border col-2">
        <p><%= @admission_score.average_schools.count %> schools</p>
        <%= link_to "View All", admission_score_schools_path(@admission_score, status: 'avg') %>
      </div>
      <% @admission_score.average_schools[0..2].each do |school| %>
        <div class="border col-3">
          <p><%= school.name %></p>
          <p><%= school.min_admission_score %></p>
        </div>
      <% end %>
    </div>
  </div>
  <div class="flex flex-column border below_average_schools">
    <div class="flex justify-center border">
      <h2 class='h1'>Weak Candidate for Admission</h2>
    </div>
    <div class="flex justify-around border">
      <div class="border col-2">
        <p><%= @admission_score.below_average_schools.count %> schools</p>
        <%= link_to "View All", admission_score_schools_path(@admission_score, status: 'below_avg') %>
      </div>
      <% @admission_score.below_average_schools[0..2].each do |school| %>
        <div class="border col-3">
          <p><%= school.name %></p>
          <p><%= school.min_admission_score %></p>
        </div>
      <% end %>
    </div>
  </div>
</div>
