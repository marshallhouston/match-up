<div id="user-id" style="display: none;">
  <%= current_user.id %>
</div>

<div class="new_score pb1">
  <%= render "admission_scores/new_score" %>
</div>

<div class="flex justify-center py1">
  <div class="col-4">
    <div class="center">
      <button name="show-gpa" class="btn btn-primary chart">Show GPA Chart</button>
    </div>
    <canvas id="gpaChart"></canvas>
  </div>
  <div class="col-4">
    <div class="center">
      <button name="show-overall-score" class="btn btn-primary chart">Show Overall Score</button>
    </div>
    <canvas id="overallScoreChart"></canvas>
  </div>
  <div class="col-4">
    <div class="center">
      <button name="show-sat" class="btn btn-primary chart">Show SAT Chart</button>
    </div>
    <canvas id="satChart"></canvas>
  </div>
</div>

<div class="scores">
  <%= render "admission_scores/all_scores" %>
</div>


<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.4.0/Chart.min.js"></script>
<script type="text/javascript">
  var API = "<%= ENV['BASE_API'] %>";
</script>
